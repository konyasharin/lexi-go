{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "baseUrl": "./src",
    "outDir": "dist",
    "experimentalDecorators": true,
    "paths": {
      "@/*": ["*"],
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
