{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "rootDir": "./src",
    "paths": {
      "@widgets/*": ["widgets/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
