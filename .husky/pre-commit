#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

if [ -t 1 ]; then
  RED='\033[0;31m'
  GREEN='\033[0;32m'
  YELLOW='\033[1;33m'
  BLUE='\033[0;34m'
  NC='\033[0m' # No Color
else
  RED=''
  GREEN=''
  YELLOW=''
  BLUE=''
  NC=''
fi

log() {
  printf "%b%s%b\n" "$1" "$2" "$NC"
}

log "$BLUE" "‚è≥ Running check-types..."
if ! pnpm run check-types; then
  log "$RED" "‚úñ Type check failed! Please fix errors before committing."
  exit 1
fi

log "$YELLOW" "üîß Running fix..."
pnpm run fix || log "$YELLOW" "‚ö†Ô∏è Auto-fix completed with warnings"

log "$BLUE" "üîç Running lint..."
if ! pnpm run lint; then
  log "$RED" "‚úñ Lint errors found! Please fix them before committing."
  exit 1
fi

log "$GREEN" "‚úî Pre-commit checks passed successfully!"
log "$GREEN" "üéâ You're ready to commit!"