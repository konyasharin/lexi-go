{
  "name": "lexi-go",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "fix": "turbo run fix",
    "check-types": "turbo run check-types",
    "prepare": "pnpm exec husky install"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "bash -c 'if [ -f $(dirname \"$1\")/package.json ]; then eslint --fix --max-warnings=0 \"$1\"; else exit 0; fi' --"
    ]
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "turbo": "^2.5.4",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
